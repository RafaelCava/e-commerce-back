    "@shelf/jest-mongodb": "^4.1.7",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.4.2",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/module-alias": "^2.0.1",
    "@types/node": "^18.15.11",
    "@types/supertest": "^2.0.12",
    "@types/validator": "^13.7.14",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.0.1",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.0",
    "mockdate": "^3.0.5",
    "nodemon": "^2.0.21",
    "rimraf": "^4.4.0",
    "sucrase": "^3.29.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5",
    "typescript": "*"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "scripts": {
    "start": "node dist/main/server.js",
    "start:debug": "nodemon -L --watch ./dist --inspect=0.0.0.0:9222 -r source-map-support/register ./dist/main/server.js --nolazy ./dist/main/server.js",
    "start:dev": "sucrase-node src/main/server.ts",
    "test": "NODE_ENV=test jest --passWithNoTests --silent --noStackTrace --runInBand --forceExit",
    "test:verbose": "NODE_ENV=test jest --passWithNoTests --runInBand",
    "test:unit": "yarn test --watch -c jest-unit.config.js",
    "test:integration": "yarn test --watch -c jest-integration.config.js",
    "test:cov": "rimraf coverage && yarn test --coverage",
    "build:compile": "swc src -d dist --source-maps --config-file .swcrc -s inline",
    "build": "rimraf dist && yarn build:compile",
    "test:staged": "yarn test --findRelatedTests $(git status -s | grep -E '.(spec|test).ts$')"
  },
  "dependencies": {
    "@swc/jest": "^0.2.26",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.53",
    "bcrypt": "^5.1.0",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "module-alias": "^2.2.2",
    "mongoose": "^7.0.3",
    "validator": "^13.9.0",
    "source-map-support": "^0.5.21"
  },
  "engines": {
    "node": "16.x"
  },
  "_moduleAliases": {
    "@": "dist"
  }
}
